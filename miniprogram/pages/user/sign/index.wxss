/* 日历 */
.calendar {

  box-shadow: 0px 3px 12px 0px rgba(195, 164, 110, 0.23);
  border-radius: 20rpx;
  padding: 0 0 20rpx;
  margin: 20px;
  margin-bottom: 50rpx;
}

.header {
  font-size: 0;
  width: 100%;
  margin: 0 auto;
}

.header>view {
  display: inline-block;
  width: 14.285%;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1px solid #D0D0D0;
  padding: 20rpx 0;
}

.weekMark {
  position: relative;
  width: 80%;
  margin: 0 auto;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 2px solid #1d1f24;
}

.date-box {
  font-size: 0;
  padding: 10rpx 0;
  width: 100%;
  margin: 0 auto;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #666;
  text-align: center;
  vertical-align: middle;
}

.date-head {
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
}

.date-now{
  color: #ffffff;
  font-size: large;
}

.date-after{
  color: #0081ff;
  font-size: large;
}

.nowDay .date-head {
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: linear-gradient(to top, #1D4259, #3963BC);
  margin: 0 auto;
}

.nowDay .date-head span {
  color: #fff;
}

.userlist {
  
  display: flex;
  justify-content: space-between;
}

.user_dix {
  display: flex;
}

.tille-1 {
  font-size: 14px;
  display: inline-block;
  padding-left: 10px;
  padding: 4px 8px;
  margin-top: 20px;
  border-radius: 0px 6px 0px 0px;
}

.user_phb {
  margin: 10px;
  border-radius: 12px;
  overflow-y: scroll;
  animation: bounceInLeft .5s
}

.user_img {
  border-radius: 50%;
  overflow: hidden;
  width: 30px;
  height: 30px;
  margin: 0px 20px;
}

.nowsDay .date-head {
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: linear-gradient(to top, #1D4259, #3963BC);
  margin: 0 auto;
}

