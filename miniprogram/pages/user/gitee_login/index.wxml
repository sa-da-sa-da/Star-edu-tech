<cu-custom bgColor="se"  isBack="{{true}}">
	<view slot="content">绑定仓库</view>
</cu-custom>
<view class="page" >
	<view class="page__bd">
		<view class="addTokenBox" >
			<view class="addTokenForm">
				<form bindsubmit="doTokenFormSubmit" bindreset="formReset">
					<view class="weui-cells weui-cells_after-title">
						<view class="weui-cell">
							<view class="weui-cell__bd">
								<textarea style="height:80px" catchtap="nothing" name="access_token" class="weui-textarea" placeholder="请在您码云后台复制的私人令牌，尽可能选择你需要使用的权限" rows="2" value="{{access_token}}"></textarea>
							</view>
						</view>
					</view>
					<view class="weui-btn-area">
						<button form-type="submit" class="weui-btn weui-btn_primary" type="primary">
							绑定仓库
						</button>
			
					</view>
				</form>
			</view>
		</view>

	</view>
</view>