
.Book_hint{
  margin: 20rpx 20rpx;
  text-align: justify; 
  padding-bottom: 120rpx;

}  

.Book_list{
  border-radius: 4px;
  overflow: hidden;
  height: 210px;
  margin-bottom: 20rpx;

}
.Book-ava{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.heart{
  width: 30rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

.Book-img{
  width: 100%;
  height: 150px;
  border-radius: 4px;
  
}

.Book-title{
  font-size: 26rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-align:left;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;

  width: 100%;

}


.Book-title-box{
  margin: 15rpx;
  margin-left: 0px;
}


